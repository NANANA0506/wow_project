extends ../layouts/base.pug

block content 
    form(action="/board/question", method="get")
            
        a.bt(href="/board/create") 
            button 작성하기
        br
        br
        each board in boards
            div.bd__ct
                div
                    div  TITLE: #{board.title} 
                    div CONTENT: #{board.content}
                    div CREATEDAT: #{board.createdAt}
                    div ID: #{board.id}
                div
                    a(href=`/board/update/:${board.id}`) 
                        button 수정하기
                    form(action="/board/delete", method="POST")
                        input(type="hidden" name="id" value=board.id)
                        input(type="submit" value="삭제하기")
            hr     